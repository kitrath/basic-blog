<div class="row justify-content-center m-3">
    <div class="col-md-4">
        <h3>Log In</h3>
        <form id="login-form">
            <div class="form-group">
                <label for="username-login">Username</label>
                <input type="text" class="form-control" id="username-login">
            </div>
            <div class="form-group">
                <label for="pwd-login">Password</label>
                <input type="password" class="form-control" id="pwd-login">
            </div>
            <div class="form-group">
                <button class="btn btn-info" type="submit">Log In</button>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <h3>Sign Up</h3>
        <form id="signup-form">
            <div class="form-group">
                <label for="username-signup">Username</label>
                <input type="text" class="form-control" id="username-signup">
            </div>
            <div class="form-group">
                <label for="pwd-signup">Password</label>
                <input type="password" class="form-control" id="pwd-signup">
            </div>
            <div class="form-group">
                <label for="pwd-check-signup">Password Again</label>
                <input type="password" class="form-control" id="pwd-check-signup">
            </div>
            <div class="form-group">
                <div id="err-signup"></div>
            </div>
            <div class="form-group">
                <button class="btn btn-success" type="submit">Sign Up</button>
            </div>
        </form>
    </div>
</div>
<script src="./js/login.js"></script>