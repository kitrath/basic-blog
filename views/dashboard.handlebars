<div class="row justify-content-center my-2">
    <div class="col-lg-4 mt-5">
        <ul class="list-group" id="blog-post-list">
            {{#each blogPosts as |post|}}
            <li class="list-group-item mb-1">
                <div class="row">
                    <div class="col-sm-8">
                        {{post.title}}
                    </div>
                    <div class="col-sm-4 justify-content-end">
                        <button type="button" class="btn btn-outline-danger btn-sm mb-1" data-action="delete" data-id={{post.id}}>Delete</button>
                        <button type="button" class="btn btn-outline-primary btn-sm mb-1" data-action="edit" data-id={{post.id}}>Edit</button>
                        </div>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="col-lg-8">
        <div>
            <button type="button" class="btn btn-success float-right mb-2" id="post-new">New Post</button>
        </div>
        <form id="blog-post-editor">
            <div class="form-group">
                <input type="text" id="post-title" class="form-control" placeholder="Post Title">
            </div>
            <div class="form-group">
                <textarea rows="16" class="form-control" id="post-content" placeholder="Write something..."></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-secondary float-right">Save Post</button>
            </div>
        </form>
    </div>
</div>
<script src="/js/dashboard.js"></script>